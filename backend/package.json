{
  "name": "tienda-pinturas-backend",
  "version": "1.0.0",
  "description": "API para tienda de pinturas",
  "main": "server.js",
  "scripts": {
    "start": "node start.js",
    "dev": "nodemon start.js",
    "test": "jest --runInBand --coverage --ci --reporters=default --reporters=jest-junit",
    "test:local": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=html",
    "test:debug": "jest --verbose --no-coverage",
    "install:dev": "npm install --only=dev"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
      
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!test-reports/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js",
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true,
    "maxWorkers": 1
  },
  "jest-junit": {
    "outputDirectory": "./test-reports",
    "outputName": "junit.xml",
    "ancestorSeparator": " â€º ",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "addFileAttribute": "true"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
